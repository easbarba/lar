#!/usr/bin/env bash

set -euo pipefail

# Info: boostrap Nix
# Dependencies: sudo, curl, bash

install()
{
    [[ -x $(command -v nix-env) ]] && return

    curl -L https://nixos.org/nix/install | sh
}

packages()
{
    local packs=(ruby direnv cpufetch)
    e_dolist ${packs[@]}
}

install
packages
