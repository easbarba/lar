#!/usr/bin/env bash

# Information
# Repo: https://github.com/kennyp/asdf_golang

# Debug Options
set -euo pipefail

# Sourcing
source "$HOME/.asdf/completions/asdf.bash"
source "$HOME/.asdf/asdf.sh"

export GO111MODULE=on

packages() {
	local command='go install'
	local packages=("golang.org/x/tools/cmd/goimports@latest"
		"golang.org/x/lint/golint@latest"
		"golang.org/x/tools/gopls@latest"
		"github.com/golangci/golangci-lint/cmd/golangci-lint@v1.39.0")

	local tools=("sigs.k8s.io/kind")
}

development() {
	local command='go get'
	local development=("mvdan.cc/sh/v3/cmd/shfmt")

	e_dolist $command ${development[@]}
}

# * RUN

echo 'Golang - ASDF'

packages
development
