#!/usr/bin/env bash
set -euo pipefail

wifi() {
    local SSID = ''
    local PASS = ''
    local DEVICE = ''

    iwctl --passphrase $PASS station $DEVICE connect $SSID
}

meh() {
    echo "MEH"
}

base() {
    pacstrap base linux linux-firmware
}

time() {
    timedatectl set-timezone America/Sao_Paulo
}

hosts() {
    touch /etc/hosts

    <<EOF
    127.0.0.1 localhost
    .         localhost
    127.0.1.1 localhost archlinux localhost

    EOF
}

# * RUN
"$@"
