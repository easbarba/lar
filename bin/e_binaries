#!/usr/bin/env bash

# Debug Options
set -euxo pipefail

bin="$HOME/bin"

mkdir -pv "$bin"
cd "$bin"

binaries=("https://raw.githubusercontent.com/dylanaraps/pfetch/master/pfetch"
	  "https://raw.githubusercontent.com/nojhan/liquidprompt/master/liquidprompt")

for binary in "${binaries[@]}"; do
    [[ ! -e "$bin/$binary" ]] && wget -c "$binary"
done
