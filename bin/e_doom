#!/usr/bin/env bash

set -euo pipefail

e_echo "Doom Emacs"

EMACS_HOME="$HOME/.config/emacs"

wipe() {
    rm -rf $EMACS_HOME
}

grab() {
    git clone --depth 1 https://github.com/hlissner/doom-emacs "$EMACS_HOME"
}

install() {
    "$EMACS_HOME"/bin/doom install
}

upgrade() {
    doom upgrade
}
