#!/usr/bin/env bash

# ====================================

url='https://download.swift.org/swift-5.6.1-release/ubuntu2004/swift-5.6.1-RELEASE/swift-5.6.1-RELEASE-ubuntu20.04.tar.gz'
wget -c $url -P /tmp

tar -xvzf /tmp/swift-5.4.2-RELEASE-ubuntu20.04.tar.gz -C "$HOME/.local/"
mv "$HOME/.local/swift-*" "$HOME/.local/swift"

# ====================================

folder="$HOME/Builds/swift-format"
version=0.50600.1

git clone https://github.com/apple/swift-format.git -C $folder

cd swift-format
git checkout "tags/$version"

swift build -c release

cp "$folder/.build/release/swift-format" "$HOME/.local/bin"
