#!/usr/bin/env bash

# DEBUG SETTINGS
set -euo pipefail

DISTRO="$(awk '/^NAME=/ { split($0,a,"="); print a[2] }' /etc/os-release)"
DEPS=(sudo pak floss)

# * CHECKER
s-checkdeps "${DEPS[@]}"

# * TASKS
_distro() {
    s-echo "Upgrading $DISTRO system packages."

    [[ -x $(command -v pak) ]] && pak update && pak upgrade && return
    [[ -x $(command -v apt) ]] && sudo apt update && sudo apt upgrade -y
}

_editors() {
    s-echo "Editors and Langs packages"

    s-doom
}

_foreign() {
    s-echo "System Foreign installers"

    s-ruby
    s-golang
    s-javascript
    s-guix
    s-flatpak
}

_user() {
    s-echo "User tasks"

    floss --grab
    floss --archive ruby,rake
}

# * RUN
_distro
_editors
_foreign
_user
