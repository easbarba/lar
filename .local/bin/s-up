#!/usr/bin/env bash
set -euo pipefail

DISTRO="$(awk '/^NAME=/ { split($0,a,"="); print a[2] }' /etc/os-release)"
DEPS=(sudo distro floss)

# * CHECKER
s-checkdeps "${DEPS[@]}"

# * TASKS
_distro() {
    s-echo "Upgrading $DISTRO system and user packages."

    distro update
    distro upgrade
}

_packagers() {
    s-echo "Editors and Langs packages"

    s-doom
    s-ruby
    s-python
    s-golang
    s-flatpak
    s-javascript
    s-vscode
}

_user() {
    s-echo "FLOSS projects"
    floss grab
    floss archive

    s-usb_tasks
}

# * RUN
_distro
_packagers
_user
