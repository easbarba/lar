#!/usr/bin/env bash

# DEBUG SETTINGS
set -euo pipefail

DISTRO="$(awk '/^NAME=/ { split($0,a,"="); print a[2] }' /etc/os-release)"
DEPS=(sudo distro floss)

# * CHECKER
s-checkdeps "${DEPS[@]}"

# * TASKS
_distro() {
    s-echo "Upgrading $DISTRO system packages."

    [[ -x $(command -v apt) ]] && sudo apt update && sudo apt upgrade
    [[ -x $(command -v dnf) ]] && sudo dnf upgrade
}

_packagers() {
    s-echo "Editors and Langs packages"

    s-doom
    s-vscode
}

_foreign() {
    s-echo "System Foreign installers"

    s-flatpak
    s-containers
}

_user() {
    s-echo "User tasks"

    s-floss grab
    s-floss archive

    s-usb_tasks
}

# * RUN
_distro
_packagers
_foreign
_user
