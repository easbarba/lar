#!/usr/bin/env bash

# DEBUG SETTINGS
set -euo pipefail

DISTRO="$(awk '/^NAME=/ { split($0,a,"="); print a[2] }' /etc/os-release)"
DEPS=(sudo distro floss)

# * CHECKER
s-checkdeps "${DEPS[@]}"

# * TASKS
_distro() {
    s-echo "Upgrading $DISTRO system and user packages."

    distro update
    distro upgrade
}

_packagers() {
    s-echo "Editors and Langs packages"

    s-doom
    s-ruby
    s-python
    s-golang
    s-javascript
    s-vscode
}

_foreign() {
    s-echo "System Foreign installers"

    s-guix
    s-flatpak
    s-containers
}

_user() {
    s-echo "User preps"

    floss grab
    floss archive

    s-usb_tasks
}

# * RUN
# _distro
_packagers
_foreign
_user
