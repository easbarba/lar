#!/usr/bin/env bash

# Debug Options
set -euo pipefail

EMAIL="$USER@outlook.com"

newkey() {
    ssh-keygen -t ed25519 -C $EMAIL
}

startagent() {
    # Start the ssh-agent in the background.

    eval "$(ssh-agent -s)"
}

addkey() {
    ssh-add "$HOME/.ssh/id_ed25519"
}

# * RUN

newkey
startagent
addkey

