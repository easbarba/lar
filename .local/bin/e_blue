#!/usr/bin/env bash

# Debug Options
set -euo pipefail

e_echo "Connect to Bluetooth Paired Devices"

DEPS=(sudo sed grep)

autoenable() {
    [[ $(cat /etc/bluetooth/main.conf | grep AutoEnable=) != '#AutoEnable=false' ]] && return

    /usr/bin/sudo /usr/bin/sed -i 's/#AutoEnable=false/AutoEnable=true/g' /etc/bluetooth/main.conf
}

poweron() {
    echo 'power on' | bluetoothctl
}

connect() {
    echo 'devices' | bluetoothctl | awk '/Device/ {printf $2}' | xargs -I {} bluetoothctl 'connect {}'
}

# * RUN

e_checkdeps "${DEPS[@]}"

autoenable
poweron
connect
