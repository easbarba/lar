#!/usr/bin/env bash

STEP=3
STATE="$1"

_state() {
    # Translate human-friendly state to volume managers command

    [[ $STATE == 'up' ]] && STATE='+'
    [[ $STATE == 'down' ]] && STATE='-'
}

_pactl() {
    [[ $STATE != 'toggle' ]] && pactl set-sink-volume @DEFAULT_SINK@ "$STATE$STEP%"
    [[ $STATE == 'toggle' ]] && pactl set-sink-mute @DEFAULT_SINK@ toggle
}

# RUN

_state
[[ -x $(command -v pactl) ]] && _pactl
