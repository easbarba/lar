#!/usr/bin/env bash

_repo() {
    flatpak remote-add --if-not-exists flathub https://flathub.org/repo/flathub.flatpakrepo
}

_foreign() {
    local command="flatpak install flathub "
    local packages=(com.discordapp.Discord com.microsoft.Teams
        com.slack.Slack us.zoom.Zoom com.skype.Client com.wps.Office)

    s-dolist "$command" "${packages[@]}"
}

# * RUN

_repo
_foreign
