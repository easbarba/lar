#!/usr/bin/env bash

# Debug Options
set -euo pipefail

DEPS=(ruby gem)
s-checkdeps "${DEPS[@]}"

# =================================

packages=(bundler rake)
s-dolist "gem install" "${packages[@]}"
s-dolist "gem update" "${packages[@]}"

# =================================

packages=(reek rufo rubocop solargraph pry taglib-ruby)
s-dolist "gem install" "${packages[@]}"
s-dolist "gem update" "${packages[@]}"
