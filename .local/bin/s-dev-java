#!/usr/bin/env bash

# Debug Options
set -euo pipefail

DEPS=(curl bash)
s-checkdeps "${DEPS[@]}"

COMMAND='sdk install'

[[ ! -f $HOME/.sdkman/bin/sdkman-init.sh ]] && curl -s "https://get.sdkman.io" | bash

TOOLS=(gradle maven)
s-dolist "$COMMAND" "${TOOLS[@]}"

LANG=(kotlin)
s-dolist "$COMMAND" "${LANG[@]}"
