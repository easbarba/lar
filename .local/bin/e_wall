#!/usr/bin/env bash

deps=(feh swaybg)
e_checkdeps "${deps[@]}"

FOLDER="$HOME/Pictures/wallpapers"

wall() {
  local found
  found=$(find "$FOLDER" -type f | shuf -n 1)

  echo "$found"
}

echo "wallpaper: $(wall)"

Feh() {
  feh --bg-max "$(wall)" &
}

Swaybg() {
  swaybg -m fit -i "$(wall)" &
}

# * RUN
[[ $(pgrep x) ]] && Feh || Swaybg
