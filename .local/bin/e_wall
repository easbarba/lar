#!/usr/bin/env bash

deps=(feh swaybg)
e_checkdeps ${deps[@]}

FOLDER=$HOME/Pictures/wallpapers
WALL=$(find $FOLDER -type f | shuf -n 1)

Feh() {
  [[ ! -x /usr/bin/feh ]] && return

  feh --bg-max --randomize $WALL &
}

Swaybg(){
  [[ ! -x /usr/bin/swaybg ]] && return

  swaybg -m fit -i $WALL &
}

# * RUN
Swaybg
