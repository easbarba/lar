#!/usr/bin/env bash

# * Information
# Site: https://guix.gnu.org/

# * Debug Options
set -euo pipefail

DEPS=(sudo guix wget bash)
s-checkdeps "${DEPS[@]}"

# * ENV VARS
export GUIX_LOCPATH="$HOME/.guix-profile/lib/locale"

s-echo "GNU GUIX"

# INSTALLING
if [[ ! -x $(command -v guix) ]]; then
	wget "https://sv.gnu.org/people/viewgpg.php?user_id=127547" -qO - | sudo -i gpg --import -

	installer='https://git.savannah.gnu.org/cgit/guix.git/plain/etc/guix-install.sh'
	wget -P /tmp "$installer"

	sudo bash /tmp/guix-install.sh

	sudo -i guix pull
fi

# UPDATE
guix pull
guix upgrade

# PACKAGES

# Fix GUIX_LOCPATH warning
guix install glibc-locales

# export GUIX_LOCPATH="$HOME/.guix-profile/lib/locale"
# version=$(ls ~/.guix-profile/lib/locale/)
# guix install "glibc-locales@$version"

packages=(nss-certs font-dejavu icecat neofetch) # font-gnu-freefont-ttf
s-dolist "guix install" "${packages[@]}"

# guile=()
# s-dolist "guix install" "${guile[@]}"

apps=(haunt) # font-gnu-freefont-ttf
s-dolist "guix install" "${apps[@]}"
