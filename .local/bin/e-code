#!/usr/bin/env bash

# Debug Options
set -euo pipefail

echo 'Vscode - packages'

_ruby() {
    local packages=(rebornix.ruby castwide.solargraph misogi.ruby-rubocop)

    for pack in "${packages[@]}"; do
        code --install-extension "${pack}" --force
    done

}

_web() {
    local packages=(formulahendry.auto-rename-tag pranaygp.vscode-css-peek)

    for pack in "${packages[@]}"; do
        code --install-extension "${pack}" --force
    done
}

_tools() {
    local packages=(esbenp.prettier-vscode coenraads.bracket-pair-colorizer
        eamodio.gitlens donjayamanne.githistory kamikillerto.vscode-colorize)

    for pack in "${packages[@]}"; do
        code --install-extension "${pack}" --force
    done
}

_tools
_ruby
_web
