#!/usr/bin/env bash

# Debug Options
set -euo pipefail

DEPS=(curl)
s-checkdeps "${DEPS[@]}"

# ==============================

[[ ! -f ~/.cargo/env ]] && curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh

# ==============================

packages=(starship fd-find exa bat ripgrep procs sd du-dust tokei)
s-dolist 'cargo install --locked' '' "${packages[@]}"
