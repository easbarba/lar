#!/usr/bin/env bash

# DEBUG SETTINGS
set -euo pipefail

# Description: Extract audio of video pointed in clipboards url.

# TODO: Check uri!

DEPS=(yt-dlp ffmpeg)
s-checkdeps "${DEPS[@]}"

FREE=(vorbis mp3 ogg)
EXT="${FREE[0]}"
URL="$(s-url)"
FOLDER="$HOME/Music/temp"

cd "$FOLDER"

__info="Format: $EXT
URL: $URL
Folder: $FOLDER"

# GETTERS ATTRIBUTES
declare -A YTDL
YTDL=([bin]='yt-dlp'
      [audio]='--extract-audio --audio-format'
      [title]="-o '%(title)s.%(ext)s'")

# RUN
echo "$__info"

${YTDL[bin]} ${YTDL[audio]} "$EXT" ${YTDL[title]} "$URL"
