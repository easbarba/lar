#!/usr/bin/env bash

# Debug Options
set -euo pipefail

EMAIL="$USER@outlook.com"
KEY_LOCATION="$HOME/.ssh/id_ed25519"

_newkey() {
    ssh-keygen -t ed25519 -C $EMAIL
}

_startagent() {
    eval "$(ssh-agent -s)"
}

_addkey() {
    ssh-add "$KEY_LOCATION"
}

# * RUN
_protect() {
    # only $USER can read and write
    chmod 600 "$KEY_LOCATION"
    chmod 600 "$KEY_LOCATION".pub
}

_newkey
_startagent
_protect
_addkey

