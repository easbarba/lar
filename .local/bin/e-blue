#!/usr/bin/env bash

# Debug Options
set -euo pipefail

e-echo "Connect to Bluetooth Paired Devices"

DEPS=(bluetoothctl sudo sed grep)

autoenable() {
    [[ $(grep 'AutoEnable=' /etc/bluetooth/main.conf) != '#AutoEnable=false' ]] && return

    /usr/bin/sudo /usr/bin/sed -i 's/#AutoEnable=false/AutoEnable=true/g' /etc/bluetooth/main.conf
}

poweron() {
    bluetoothctl power on
}

connect() {
    bluetoothctl devices | awk '/Device/ {printf $2}' | xargs -I {} bluetoothctl 'connect {}'
}

# * RUN

e-checkdeps "${DEPS[@]}"

autoenable
poweron
connect
