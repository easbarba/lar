#!/usr/bin/env bash

# DEBUG OPTIONS
set -euo pipefail

DEPS=(sudo grep cut tr distro floss cejo emacs parallel cp find guix)
e_checkdeps "${DEPS[@]}"

e_echo "Upgrading system."
distro update
distro upgrade

e_guix

e_echo "FLOSS projects"
floss grab
floss archive
e_dots

e_doom
e_ruby
e_js

e_echo "Building Nightly Emacs"
cejo project emacs
