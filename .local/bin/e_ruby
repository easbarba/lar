#!/usr/bin/env bash

# Debug Options
set -euo pipefail

deps=(ruby gem)
e_checkdeps ${deps[@]}

packages()
{
    e_echo "Install global ruby gems"

    local packages=(bundler rake solargraph)

    e_dolist "gem install" "${packages[@]}"
    e_dolist "gem update" "${packages[@]}"
}

# * RUN
packages
