#!/usr/bin/env bash

_distros() {
    [[ -x $(command -v /usr/bin/pacman) ]] && s-arch
    [[ -x $(command -v /usr/bin/dnf) ]] && s-fedora
    [[ -x $(command -v /usr/bin/apt) ]] && s-debian
    [[ -x $(command -v /usr/local/bin/guix) ]] && s-guix
}

_editors() {
    [[ -x $(command -v /usr/bin/emacs) ]] && s-doom
    [[ -x $(command -v /usr/bin/code) ]] && s-vscode
}

_langs() {
    [[ -x $(command -v /usr/bin/go) ]] && s-golang
    [[ -x $(command -v /usr/bin/npm) ]] && s-javascript
    [[ -x $(command -v /usr/bin/ruby) ]] && s-ruby
    [[ -x $(command -v /usr/bin/python) ]] && s-python
}

_system() {
    [[ -x $(command -v /usr/bin/ssh) ]] && s-ssh
    [[ -x $(command -v /usr/bin/gpg) ]] && s-gpg
    [[ -x $(command -v /usr/bin/gnome-shell) ]] && s-gnome
    [[ -x $(command -v /usr/bin/flatpak) ]] && s-flatpak
}

_devel() {
    [[ -x $(command -v /usr/bin/ssh) ]] && s-podman

}

# * RUN

_distros
_editors
_langs
_system
