#!/usr/bin/env bash

# Debug Options
set -euo pipefail

DEPS=(ruby gem)
s-checkdeps "${DEPS[@]}"

_base() {
    packages=(bundler rake)

    s-dolist "gem install" "${packages[@]}"
    s-dolist "gem update" "${packages[@]}"
}

_devel() {
    packages=(reek rufo rubocop)

    s-dolist "gem install" "${packages[@]}"
    s-dolist "gem update" "${packages[@]}"
}

_vagrant() {
    packages=()

    s-dolist "gem install" "${packages[@]}"
    s-dolist "gem update" "${packages[@]}"
}

# * RUN

_base
_devel
