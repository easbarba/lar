#!/usr/bin/env bash

# * Debug Options
set -euo pipefail

DEPS=(sudo guix wget bash)
e_checkdeps "${DEPS[@]}"


# * Information
# Site: https://guix.gnu.org/

# * ENV VARS
export GUIX_LOCPATH="$HOME/.guix-profile/lib/locale"

e_echo "GNU GUIX"

keys() {
	[[ -x $(command -v guix) ]] && return

	wget "https://sv.gnu.org/people/viewgpg.php?user_id=127547" -qO - | sudo -i gpg --import -
}

get() {
	[[ -x $(command -v guix) ]] && return

	local installer='https://git.savannah.gnu.org/cgit/guix.git/plain/etc/guix-install.sh'
	wget -P /tmp "$installer"
}

install() {
	[[ -x $(command -v guix) ]] && return

	sudo /usr/bin/bash /tmp/guix-install.sh
}

upgrade() {
	sudo -i guix pull
	guix pull
	guix upgrade
}

glocale() {
	# Fix that annoying GUIX_LOCPATH warning
	local version=$(ls ~/.guix-profile/lib/locale/)
	guix install glibc-locales@"$version"
}

system() {
	local packages=(nss-certs font-gnu-freefont-ttf font-dejavu)
	e_dolist "guix install" "${packages[@]}"
}

development() {
	local packages=(direnv)
	e_dolist "guix install" "${packages[@]}"
}

languages() {
	local packages=(node elixir ruby)
	e_dolist "guix install" "${packages[@]}"
}


# * RUN

keys
get
install
upgrade

glocale
system
development
languages
