#!/usr/bin/env bash

# Debug Options
set -euo pipefail

echo 'Visual Studio Code - installing packages'

INSTALLER='code'
COMMAND='--install-extension'

packages=(xabikos.JavaScriptSnippets
    dbaeumer.vscode-eslint WallabyJs.quokka-vscode
    mgmcdermott.vscode-language-babel sburg.vscode-javascript-booster
    eg2.vscode-npm-script)
s-dolist "$INSTALLER $COMMAND" "${packages[@]}"

vuejs=(octref.vetur)
s-dolist "$INSTALLER $COMMAND" "${vuejs[@]}"

ruby=(rebornix.ruby castwide.solargraph misogi.ruby-rubocop)
s-dolist "$INSTALLER $COMMAND" "${ruby[@]}"

web=(formulahendry.auto-rename-tag esbenp.prettier-vscode ysemeniuk.emmet-live)
s-dolist "$INSTALLER $COMMAND" "${web[@]}"

go=(golang.Go)
s-dolist "$INSTALLER $COMMAND" "${go[@]}"

java=(vscjava.vscode-java-pack Pivotal.vscode-boot-dev-pack)
s-dolist "$INSTALLER $COMMAND" "${java[@]}"

python=(ms-python.python)
s-dolist "$INSTALLER $COMMAND" "${python[@]}"

misc=(jrebocho.vscode-random streetsidesoftware.code-spell-checker
    usernamehw.errorlens wmaurer.change-case p42ai.refactor SimonSiefke.svg-preview)
s-dolist "$INSTALLER $COMMAND" "${misc[@]}"

css=(pranaygp.vscode-css-peek)
s-dolist "$INSTALLER $COMMAND" "${css[@]}"

ops=(ms-kubernetes-tools.vscode-kubernetes-tools
    ms-azuretools.vscode-docker ms-vscode-remote.remote-containers
    googlecloudtools.cloudcode mindaro.mindaro)
s-dolist "$INSTALLER $COMMAND" "${ops[@]}"

local themes=(luxcium.pop-n-lock-theme-vscode)
s-dolist "$INSTALLER $COMMAND" "${themes[@]}"

tools=(esbenp.prettier-vscode eamodio.gitlens vscodevim.vim
    donjayamanne.githistory kamikillerto.vscode-colorize
    ritwickdey.LiveServer ms-azuretools.vscode-docker)
s-dolist "$INSTALLER $COMMAND" "${tools[@]}"
