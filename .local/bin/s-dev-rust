#!/usr/bin/env bash

# Debug Options
set -euo pipefail

DEPS=(curl)
s-checkdeps "${DEPS[@]}"

[[ ! -f ~/.cargo/env ]] && curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh
. "$HOME/.cargo/env"

TOOLS=(starship)
s-dolist 'cargo install --locked' "${TOOLS[@]}"

APPS=(fd-find ripgrep exa bat procs sd du-dust tokei)
s-dolist 'cargo install --locked' "${APPS[@]}"
