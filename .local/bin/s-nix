#!/usr/bin/env bash

# Debug Options
set -euo pipefail

# Description: boostrap Nix
# Dependencies: sudo, curl, bash

_install() {
    [[ -x $(command -v nix-env) ]] && return

    sh <(curl -L https://nixos.org/nix/install) --daemon
}

_packages() {
    local packages=() # mcfly direnv cpufetch
    e_dolist 'nix-env -iA' "${packages[@]}"
}

_languages() {
    local packages=(nixpkgs.swift)
    e_dolist 'nix-env -iA' "${packages[@]}"
}

_install
_packages
_packages
