#!/usr/bin/env bash

# Debug Options
set -euo pipefail

DEPS=(npm)
s-checkdeps "${DEPS[@]}"

ESSENTIAL=(npm)
TOOLS=(js-beautify fx stylelint stylelint-config-standard)
LANGS=(typescript)

groups=("${ESSENTIAL[@]}" "${TOOLS[@]}" "${LANGS[@]}")

for group in "${groups[@]}"; do
	s-dolist 'npm install --global' "$group"
	s-dolist 'npm update --global' "$group"
done
