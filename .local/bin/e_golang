#!/usr/bin/env bash

# Debug Options
set -euo pipefail

e_echo "Golang Toolings."

export GO111MODULE=on

packages() {
	local command="go install"
	local packages=("golang.org/x/tools/gopls@latest"
	)

	e_dolist "$command" "${packages[@]}"
}

tols() {
	local command='go get'
	local packages=("sigs.k8s.io/kind")

	e_dolist "$command" "${packages[@]}"
}

devel() {
	local command='go install'
	local packages=("mvdan.cc/sh/v3/cmd/shfmt@latest")

	e_dolist "$command" "${packages[@]}"
}

# * RUN
# tools
packages
devel
