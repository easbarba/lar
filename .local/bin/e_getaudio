#!/usr/bin/env bash

# Description: Extract audio of video pointed in clipboards url.

# TODO: Url has url?
DEPS=(youtube-dl ffmpeg)
e_checkdeps "${DEPS[@]}"

FREE=(vorbis ogg)

EXT="${FREE[0]}"
URL="$(e_url)"

FOLDER="$HOME/Music"
mkdir -p "$FOLDER" && cd "$FOLDER"

# GETTERS ATTRIBUTES
declare -A YTDL
YTDL=(
    [bin]="youtube-dl"
    [audio]="--extract-audio --audio-format"
    [title]="-o '%(title)s.%(ext)s'")

# RUN
__info="Format: $EXT
URL: $URL
Folder: $PWD

"
echo "$__info"

"${YTDL[bin]}" ${YTDL[audio]} "$EXT" ${YTDL[title]} "$URL"
