#!/usr/bin/env bash

s-echo "Python Toolings"

_devel() {
    local packages=(black pipenv pyflakes pytest isort nose poetry python-lsp-server)

    local command="python3 -m pip install --upgrade"
    s-dolist "$command" "${packages[@]}"
}

_library() {

    local packages=(pyperclip beautifulsoup4 cryptography)

    local command="python3 -m pip install --upgrade"
    s-dolist "$command" "${packages[@]}"
}

_tools() {

    local packages=(yt-dlp)

    local command="python3 -m pip install --upgrade"
    s-dolist "$command" "${packages[@]}"
}

_poetry() {
    [[ ! -x $(command -v poetry) ]] &&
        curl -sSL https://raw.githubusercontent.com/python-poetry/poetry/master/get-poetry.py | python3 -

    s-echo "Poetry"
    poetry self update

    # poetry completions zsh >~/.zfunc/_poetry
}

_poetry
_library
_devel
_tools
