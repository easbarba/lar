#!/usr/bin/env bash

# Description: auto-start some software executables

DEPS=(bash command nohup pgrep awk)
LOCAL_BIN="$HOME/.local/bin"

# ===================================================
# * LIST OF PROGRAMS
TOOLS=('udiskie --notify --tray'
  'blueman-applet'
  'dunst'
  'nm-applet'
  'setxkbmap -model abnt2 -layout br -variant abnt2'
  'xautolock -time 8 -locker "slock" -detectsleep'
  "$LOCAL_BIN/slstatus"
  'mpd')

APPS=("$HOME/.config/emacs/bin/doom run"
  "$LOCAL_BIN/st"
  'chromium')

# ===================================================
# * HELPERS

not_found() {
  # check if program executable is found
  local app=$(echo "$1" | awk '{ print $1}') # get first word of command string with options given

  [[ ! -x $(command -v "$app") ]]
}

is_running() {
  # type: boolean
  # return if PROGRAM is running

  [[ $(pgrep -f "$1") ]]
}

run() {
  # run program as background process
  # TODO: use dbus-session-run

  nohup bash -c "$1" &
}

dolist() {
  # given a list of programs, perform a few tasks before running.

  local apps=("$@")

  for app in "${apps[@]}"; do
    not_found "$app" && continue
    is_running "$app" && continue
    run "$app"
  done
}

# ===================================================
# * RUN

dolist "${TOOLS[@]}"
dolist "${APPS[@]}"
