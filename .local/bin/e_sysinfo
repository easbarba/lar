#!/usr/bin/env bash

# DEBUG OPTIONS
set -euo pipefail

# Dependencies: sensors, ping, awk, grep, sed, amd ryzen, vega 10, debian

deps=(sensors ping gawk grep sed amixer pactl) # TODO: Check deps

Volume() {
    local result="???"
    local check="$(pactl list sinks | grep 'Mute' | awk '{print $2}' | tr -d '\n')"
    # [[ $(pgrep -x "amixer") ]] && result="$(amixer get Master | grep % | awk '{ print substr($5,2,3) }')"

    [[ $(pgrep -x "pulseaudio") ]] && result="$(pactl list sinks | grep 'Volume: front' | tail -1 | awk '{print $5}')"

    [[ $check == *\[yes\]* ]] && printf "\Uf026"
    [[ $check == *no* ]] && printf "%s" "\Uf028 $result"
}

Cpuf() {
    local prevtotal
    local total
    local result
    read -r _ a b c previdle rest </proc/stat
    prevtotal=$((a + b + c + previdle))
    sleep 0.5
    read -r _ a b c idle rest </proc/stat
    total=$((a + b + c + idle))
    result="$((100 * ((total - prevtotal) - (idle - previdle)) / (total - prevtotal)))"
    printf "%s" "\Uf2db ${result}%"
}

Cput() {
    local result
    result="$(sensors 2>&1 | grep Tctl | awk '{print substr($2, 2)}')"
    printf "%s" "\Uf06d ${result}"
}

Memory() {
    local result
    result="$(free -m | awk 'NR==2{printf "%dMB\n", $3,$2,$3*100/$2 }')"
    printf "%s" "\Uf7c2 ${result}"
}

Date() {
    local result
    result="$(date "+%H:%M - %a, %b %d")"
    printf "%s" "\Uf017 ${result}"
}

Battery() {
    local result
    result="$(acpi -b | awk '{ print substr($4, 1, length($4)-1)"% ("substr($3, 1, length($3)-1)")"}')"
    printf "%s" "\Uf241: ${result}"
}

Gput() {
    local result
    result="$(sensors 2>&1 | grep edge | awk '{print substr($2, 2)}')"
    printf "%s" "\Uf11b  $result"
}

arch-update() {
    local sys
    local check

    sys=$(checkupdates | wc -l)

    [[ "$sys" != "0" ]] && printf "%s" "$sys "
}

update-debian() {
    local output=$(aptitude full-upgrade --simulate --assume-yes)
    local num=$(($packs | wc - l))
    printf "%s" "Packs: $num"
}

Connection() {
    local result
    result=$(nmcli connection show | awk 'NR==2 {print $4}')
    if [[ "$result" != '--' ]]; then
        printf 'CON: ON'
    else
        printf 'CON: OFF'
    fi
}

Host() {
    printf "%s" "${HOSTNAME^}"
}

SEP="  "
echo -e "$(Volume)$SEP$(Battery)$SEP$(Memory)$SEP$(Cpuf)$SEP$(Cput)$SEP$(Gput)$SEP$(Date)"

exit 0
