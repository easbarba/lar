# Bind App to workspace
# query for apps info with: swaymsg -t get_tree
# swaymsg -t get_workspaces

set $ws1 "anno"
set $ws2 "mx"
set $ws3 "term"
set $ws4 "www"
set $ws5 "media"

assign [app_id="libreoffice"] workspace $ws1
assign [app_id="libreoffice-writer"] workspace $ws1
assign [app_id="org.pwmt.zathura"] workspace $ws1
assign [app_id="foot"] workspace $ws3
assign [app_id="Alacritty"] workspace $ws3
assign [class="Insomnia"] workspace $ws4
assign [class="IceCat"] workspace $ws4
assign [class="Firefox"] workspace $ws4
assign [class="Chromium"] workspace $ws4
assign [class="Google-chrome"] workspace $ws4
assign [app_id="chromium-browser"] workspace $ws4
assign [app_id="mpv"] workspace $ws5
assign [app_id="elisa"] workspace $ws5
