#!/usr/bin/env bash

# ** DOOM EMACS
export DOOM_DIR="$HOME/.config/emacs"
export PATH="$DOOM_DIR/bin:$PATH"

# ** PHP
export PATH="$HOME/.config/composer/vendor/bin:$PATH"

# ** RUBY
export GEM_HOME="$HOME/.local/gem"
export PATH="$GEM_HOME/bin:$PATH"

# ** GUIX
export GUIX_PROFILE="$HOME/.guix-profile"
export GUIX_LOCPATH="$GUIX_PROFILE/lib/locale"
export PATH="$GUIX_PROFILE/bin:$PATH"

# OPS
export VAGRANT_DEFAULT_PROVIDER=libvirt

# NPM
export NPM_CONFIG_PREFIX="$XDG_CONFIG_HOME/npm"
export NPM_CONFIG_USERCONFIG="$XDG_CONFIG_HOME/npm/config"
# export NPM_CONFIG_CACHE="$XDG_CACHE_HOME/npm"
# export NPM_CONFIG_TMP="$XDG_RUNTIME_DIR/npm"
export NPM_HOME="$XDG_CONFIG_HOME/npm"
export NPM_BIN="$NPM_HOME/bin"
export PATH="$NPM_BIN":$PATH

# BUN
export BUN_INSTALL="$HOME/.bun"
export PATH="$BUN_INSTALL/bin:$PATH"

# DENO
export DENO_INSTALL="/home/easbarba/.deno"
export PATH="$DENO_INSTALL/bin:$PATH"
