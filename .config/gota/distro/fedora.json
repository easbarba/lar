{
  "manager": "Fedora",
  "refresh": "sudo dnf update",
  "upgrade": "sudo dnf upgrade  --assumeyes",
  "command": "sudo dnf install --assumeyes",
  "deps": [
    "dnf"
  ],
  "pre": [
    "sudo dnf install -y fedora-workstation-repositories",
    "sudo dnf config-manager -y --set-enabled google-chrome",
    "sudo dnf install -y https://mirrors.rpmfusion.org/free/fedora/rpmfusion-free-release-$(rpm -E %fedora).noarch.rpm",
    "sudo dnf install -y https://mirrors.rpmfusion.org/nonfree/fedora/rpmfusion-nonfree-release-$(rpm -E %fedora).noarch.rpm"
  ],
  "packages": {
    "system": [
      "git",
      "openssh",
      "unzip",
      "zip",
      "p7zip",
      "at",
      "usbutils",
      "lsof",
      "atool",
      "time",
      "entr",
      "tree",
      "bc",
      "curl",
      "strace",
      "ltrace",
      "cpio",
      "lhasa",
      "lzop",
      "rsync",
      "pv",
      "texinfo",
      "autoconf",
      "automake",
      "socat",
      "tmux",
      "unrar"
    ],
    "shell": [
      "bash-completion",
      "ShellCheck"
    ],
    "fonts": [
      "hack-fonts",
      "dejavu-fonts",
      "noto-fonts",
      "jetbrains-mono-fonts",
      "liberation-fonts",
      "google-droid-fonts"
    ],
    "gnome": [
      "gnome-music",
      "gnome-tweaks",
      "gnome-extensions-app",
      "transmission-gtk"
    ],
    "laptop": [
      "acpi",
      "sensors",
      "lshw",
      "acpid"
    ],
    "wayland": [
      "wl-clipboard"
    ],
    "cli": [
      "htop",
      "bottom",
      "ffmpeg",
      "mpv",
      "elinks",
      "libnotify",
      "ranger",
      "aria2",
      "cmus"
    ],
    "system": [
      "sepolicy"
    ],
    "user": [
      "chromium",
      "firefox",
      "libreoffice",
      "gimp",
      "thunderbird",
      "xdg-utils",
      "ImageMagick",
      "aspell",
      "aspell-pt_BR",
      "aspell-en",
      "calibre",
      "pandoc",
      "obs-studio",
      "inkscape",
      "steam"
    ],
    "media": [
      "gstreamer1",
      "gstreamer1-libav",
      "gstremer-plugins-bad",
      "gstreamer1-plugins-base",
      "gstreamer1-plugins-good",
      "gstreamer1-plugins-ugly-free"
    ],
    "external": [
      "google-chrome-stable"
    ]
  },
  "post": [
    "sudo dnf install gstreamer1-plugins-{bad-\*,good-\*,base} gstreamer1-plugin-openh264 gstreamer1-libav --exclude=gstreamer1-plugins-bad-free-devel",
    "sudo dnf install lame\* --exclude=lame-devel",
    "sudo dnf group upgrade --with-optional --allowerasing Multimedia"
  ]
}
