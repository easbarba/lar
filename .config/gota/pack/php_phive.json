{
  "lang": "php_phive",
  "deps": ["php", "phive"],
  "pre": "phive selfupdate",
  "post": ["phive update", "phive purge"],
  "command": "phive install --target ~/.local/bin",
  "packages": {
    "tools": [
      "phpunit",
      "psalm",
      "phing",
      "php-cs-fixer",
      "phpcbf",
      "phpcs",
      "phpstan",
      "phpDocumentor",
      "humbug/box"
    ],
    "apps": ["easbarba/qas"]
  }
}
