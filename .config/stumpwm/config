;; -*- lisp -*-

(in-package :stumpwm)

(defparameter *xdg-config-home-*
  (directory-namestring
   (truename (merge-pathnames (user-homedir-pathname)
                              ".config")))
  "XDG CONFIG HOME.")

(defparameter *config-home*
  (directory-namestring
   (truename (merge-pathnames *xdg-config-home-*
                              "stumpwm")))
  "StumpWM configuration directory.")

(defun al/load (filename)
  "Load a file FILENAME (without extension) from `al/init-directory'."
  (let ((file (merge-pathnames (concat filename ".lisp")
                               *config-home*)))
    (if (probe-file file)
        (load file)
        (format *error-output* "File '~a' doesn't exist." file))))

(al/load "variables-settings")
(al/load "misc-settings")
(al/load "modeline")
(al/load "workspaces")
(al/load "keybinds")
(al/load "utilities")
(al/load "variables-folders")
(al/load "autostart")
(al/load "variables-apps")
(al/load "keybinds-system")
(al/load "contrib-modules")

