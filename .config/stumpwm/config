;; -*- lisp -*-

(in-package :stumpwm)

(defparameter *xdg-config-home-*
  (directory-namestring
   (truename (merge-pathnames (user-homedir-pathname)
                              ".config")))
  "XDG CONFIG HOME.")

(defparameter *config-home*
  (directory-namestring
   (truename (merge-pathnames *xdg-config-home-*
                              "stumpwm")))
  "StumpWM configuration directory.")

(defun easload (filename)
  "Load FILENAME, without extension."
  (let ((file (merge-pathnames (concat filename ".lisp")
                               *config-home*)))
    (if (probe-file file)
        (load file)
        (format *error-output* "File '~a' doesn't exist." file))))

(easload "variables-settings")
(easload "misc-settings")
(easload "modeline")
(easload "workspaces")
(easload "keybinds")
(easload "utilities")
(easload "variables-folders")
(easload "autostart")
(easload "variables-apps")
(easload "keybinds-system")
(easload "contrib-modules")
